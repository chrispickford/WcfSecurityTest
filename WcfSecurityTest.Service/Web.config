          <add name="traceListener" />
        </listeners>
      </source>
    </sources>
    <sharedListeners>
      <add name="traceListener" type="System.Diagnostics.XmlWriterTraceListener" initializeData="D:\LOGS\trace.svclog" />
    </sharedListeners>
    <trace autoflush="true" />
